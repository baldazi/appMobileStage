<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>
    <style name="Base.Theme.top" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_100</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <item name="titleTextColor">@color/orange</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="forget_password">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="rounded">
        <item name="cornerSizeTopLeft">30%</item>
        <item name="cornerSizeTopRight">30%</item>
        <item name="cornerSizeBottomRight">30%</item>
        <item name="cornerSizeBottomLeft">30%</item>
    </style>

    <style name="rounded_200">
        <item name="cornerSizeTopLeft">60%</item>
        <item name="cornerSizeTopRight">60%</item>
        <item name="cornerSizeBottomRight">60%</item>
        <item name="cornerSizeBottomLeft">60%</item>
    </style>

    <style name="bg_placeholder">
        <item name="android:background">@color/orange</item>
    </style>
</resources>
